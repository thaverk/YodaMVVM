<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YodaMVVM.Views.AnswerPage"
             xmlns:models="clr-namespace:YodaMVVM.Models"
             xmlns:vm="clr-namespace:YodaMVVM.ViewModels"
             xmlns:local="clr-namespace:YodaMVVM.Views"
             Title="AnswerPage" x:DataType="vm:AnswerViewModel">
    <VerticalStackLayout>
        <Frame BackgroundColor="Beige"  Margin="10"  VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand">
            <Label
           Text="{Binding Response.MessageBody}"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
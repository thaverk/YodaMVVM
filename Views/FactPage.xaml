<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YodaMVVM.Views.FactPage"
             Title="FactPage">
    <VerticalStackLayout>
        <Label Text="Welcome to Fun Facts with Yoda!" Style="{StaticResource Headline}" />
        <Label Text="{Binding Chat.Content}" Style ="{StaticResource SubHeadline}"/>
        <Button Text="Get New Fact" Command="{Binding GetFactCommand}" />
    </VerticalStackLayout>
</ContentPage>